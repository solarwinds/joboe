<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="testService.method1()" result="flowScope.testModel" />
	</on-start>
	
	<view-state id="state1" model="testModel">
		<transition on="next" to="state2" />
		<transition on="cancel" to="cancel" bind="false" />
	</view-state>
	
	<view-state id="state2" model="testModel">
		<on-render>
			<evaluate expression="testService.method2()"></evaluate>
		</on-render>
		<transition on="next" to="state3">
			<set name="flowScope.testingAttribute" value="testService.method3('dummy')"></set>
			<evaluate expression="testService.method4(true)" />
		</transition>
		<transition on="back" to="state1">
			<evaluate expression="testService.method4(true)" />
		</transition>
		<transition on="subflow" to="subflowState">
			<evaluate expression="testService.method4(true)" />
		</transition>
		<transition on="state8" to="state8"/>
		
		<transition on="exception" to="state3">
			<evaluate expression="testService.methodTriggerException()" />
		</transition>
		<transition on="cancel" to="cancel" bind="false"/>
	</view-state>
	
	<action-state id="state3">
		<on-entry><evaluate expression="testService.method2()"/></on-entry>
		<evaluate expression="testService.method1()"/>
		<evaluate expression="testService.method3('proceed')"/>
		<transition on="proceed" to="state4"/>
		<transition on="error" to="state2"/>
		<on-exit><evaluate expression="testService.method2()"/></on-exit>
	</action-state>
	
	<decision-state id="state4">
		<if test="testService.method3('notTrue') == 'true'" then="state2"/>
		<if test="testService.method4(true)" then="state4-2" else="state2"/>
	</decision-state>
	
	<decision-state id="state4-2">
		<if test="testService.method4(false)" then="state2" else="state5"/>
	</decision-state>
		
	<view-state id="state5" model="testModel">
		<transition on="end6" to="state6"/>
		<transition on="end7" to="state7"/>
		<transition on="back" to="state2"/>
		<transition on="cancel" to="cancel" bind="false"/>
	</view-state>
	
	<subflow-state id="subflowState" subflow="plain/test/subflow">
		<transition to="state2"/>
	</subflow-state>
	
	<end-state id="state6">
		<on-entry><evaluate expression="testService.method2()"></evaluate></on-entry>
	</end-state>
	<end-state id="state7"/>

	<end-state id="cancel" view="externalRedirect:contextRelative:/"/>
	
	<global-transitions>
		<transition on-exception="java.lang.Exception" to="cancel" />
	</global-transitions>
	
	<on-end>
		<evaluate expression="testService.method1()" result="flowScope.testModel" />
	</on-end>
	

</flow>