<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.tracelytic.testapp</groupId>
	<artifactId>test-opentelemetry-pure-sdk</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>test-opentelemetry-pure-sdk</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<version>2.2.2.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>io.opentelemetry</groupId>
			<artifactId>opentelemetry-sdk</artifactId>
			<version>0.3.0</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/com.appoptics.agent.java/appoptics-sdk -->
<!--		<dependency>-->
<!--			<groupId>com.appoptics.agent.java</groupId>-->
<!--			<artifactId>appoptics-opentelemetry-sdk</artifactId>-->
<!--			<version>6.19.0</version>-->
<!--		</dependency>-->
		<dependency>
			<groupId>com.appoptics.agent.java</groupId>
			<artifactId>appoptics-opentelemetry-sdk-standalone</artifactId>
			<version>6.19.0</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
	      <resource>
	        <directory>src/main/java</directory>
	        <excludes>
	          <exclude>**/*.java</exclude>
	        </excludes>
	      </resource>
	      <resource>
	        <directory>src/main/resources</directory>
	      </resource>
	    </resources>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>11</source>
					<target>11</target>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>
