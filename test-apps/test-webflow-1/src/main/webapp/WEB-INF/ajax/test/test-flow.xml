<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="testService.method1()" result="flowScope.testModel" />
	</on-start>
	
	<view-state id="state1" model="testModel">
		<transition on="next" to="state2" />
		<transition on="cancel" to="cancel" bind="false" />
	</view-state>
	
	<view-state id="state2" model="testModel">
		<on-render>
			<evaluate expression="testService.method2()"></evaluate>
		</on-render>
		<transition on="finish" to="state3">
			<evaluate expression="testService.method4(true)" />
		</transition>
		<transition on="back" to="state1">
			<evaluate expression="testService.method4(true)" />
		</transition>
		<transition on="cancel" to="cancel" bind="false"/>
	</view-state>
	
	<end-state id="state3" view="start.jsp">
		<on-entry><evaluate expression="testService.method3('dummy')"></evaluate></on-entry>
	</end-state>
	
	<end-state id="cancel" view="externalRedirect:contextRelative:/"/>

	<on-end>
		<evaluate expression="testService.method1()" result="flowScope.testModel" />
	</on-end>
	

</flow>