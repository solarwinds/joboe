# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /async                      controllers.Application.async()
GET     /get-directions             controllers.ServiceApplication.getDirections()
GET     /cross-server               controllers.ServiceApplication.crossServer()
GET     /get-simple                 controllers.ServiceApplication.getSimple()
GET     /get-stream                  controllers.ServiceApplication.getStream()
#GET     /post-stream                  controllers.ServiceApplication.postStream()
GET     /post-multipart             controllers.ServiceApplication.postMultipart()
GET     /put-big-file               controllers.ServiceApplication.putBigFile()
GET     /get-timeout               controllers.ServiceApplication.timeout()
GET     /stream-file                controllers.StreamApplication.streamFile()
GET     /stream-chunked             controllers.StreamApplication.streamChunked()
GET     /stream-entity             controllers.StreamApplication.streamEntity()
GET     /mongo                      controllers.MongoApplication.index()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
