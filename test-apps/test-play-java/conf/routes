# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /file                       controllers.Application.file()
GET     /chunked                    controllers.Application.chunkedFile()
GET     /exception					controllers.Application.exception()
GET     /wait/:length               controllers.Application.doWait(length: Int)
GET     /async                      controllers.Application.async()
GET     /websocket                  controllers.Application.webSocket()
GET     /post                       controllers.Application.post()
POST    /post                       controllers.Application.post()
GET     /get-directions             controllers.Application.getDirections()
GET     /cross-server             controllers.Application.crossServer()
GET     /get-stream                 controllers.Application.getStream
GET     /post-stream                controllers.Application.postStream

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
